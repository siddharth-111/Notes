<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".MainActivity"
    android:id="@+id/parentLayout1"
    >
    <RelativeLayout
        android:id="@+id/inputHolder1"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="#262626">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtNoteModifier"
            android:layout_toLeftOf="@+id/editNote"
            android:layout_toStartOf="@+id/editNote"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="false"
            android:hint = "Edit Your Notes"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            />
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/deleteNote"
            android:onClick="deleteNoteActivity"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_action_name3"
            />
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/editNote"
            android:onClick="exitActivity"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_action_name"
            android:layout_toLeftOf="@+id/deleteNote"
            android:layout_toStartOf="@+id/deleteNote"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fillViewport="true"
        android:layout_below="@id/inputHolder1"
        >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id = "@+id/mainHolder1"
        android:clipChildren="false"
        >
     <TextView
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:id="@+id/tempText"
      />
        </LinearLayout>
    </ScrollView>
    </RelativeLayout>
